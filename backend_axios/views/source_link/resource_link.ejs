<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>resource</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/source_link/resource_link.css">
    <link rel="stylesheet" href="/styles/source_link/media_query.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"
/>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <title>Document</title>
    <link rel="icon" type="image/x-icon" href="/images/lanch_page/favicon.png">
</head>
<body>

    <!-- nab bar -->
    <div class="nav_bar">
        <div class="logo"></div>
    </div>

    <div class="gra_nav"></div>

<!-- main continer -->

    <div class="main_continer">

        <div class="unit_continer">
            
            <a href="<%=`${our_domain}${dept}/${sub}/1`%>"><button class="go_back left_bar"><span class="text">Go back</span></button></a>

            <a href="<%=`/${dept}/${sub}/${unit}/${topic}/video_res` %>" class="left_bar"><div ><center>Videos</center></div></a>
            <a href="<%=`/${dept}/${sub}/${unit}/${topic}/doc_res` %>" class="left_bar"><div ><center>Docuents</center></div></a>
            <a href="<%=`/${dept}/${sub}/${unit}/${topic}/link_res` %>" class="left_bar"><div><center>Links</center></div></a>
          
        </div>

        <div class="main_topic_continer">
            <div class="topic_head_continer">
                <h1><span>Links:</span></h1>
                <button type="button" class="button" onclick="openLoginModal()">
                    <span class="button__text">Add Link</span>
                    <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>
                  </button>
            </div>
            <div class="main_document_content">
                <% if(locals.data){ %>
                <%for(let i=0;i<data.length;i++){%>
                <div class="link_continer">
                    <span class="text1">
                    <div class="doc_title"><h2>Link Title:</h2> 
                        <h3> &ensp;<%= data[i].link_title%></h3>
                    </div>
                    <div class="doc_des"> <h2>Link Description:</h2> <p> &ensp;<%= data[i].link_desc%></p></div>
                    <a href="<%=`${data[i].link}`%>" _blank><button class="go_back visit"><span class="text">visit</span>
                        </button></a>
                    
                </div>
            </span>
                <%}}%>

                
            </div>
        </div>


    </div>

    <div id="loginModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
            <span class="close" onclick="closeLoginModal()">&times;</span>
            <div class="other_content">
            <h1 class="add_topic">ADD Link</h1>
            <form action="<%=`/${dept}/${sub}/${unit}/${topic}/link_res` %>" method="post">
                <label>enter the link name:</label>
                <input type="text" placeholder="enter the topic" name="link_name">
                <label>enter the link:</label>
                <input type="text" placeholder="enter thr link" name="link">
                <label>enter the description:</label>
                <textarea name="description" cols="50" rows="10" ></textarea>
                <button class="sub_button">Add</button>
            </form>
            </div>
        </div>

    </div>

    <script src="/js_files/source_link/resource_link.js"></script>
</body>
</html>